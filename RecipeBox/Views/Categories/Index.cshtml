@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h2>Categories</h2>

@using (Html.BeginForm("Index", "Category", FormMethod.Get))
{
  <p>
    Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <button type="submit" value="Search" class="btn btn-outline-success btn-sm">Search</button>
  </p>
}

<table class="table">
  <tr>
    <th>
      Name
    </th>
  </tr>
  <tr>
    @if (@Model.Count == 0)
    {
      <th>
        <h3>No Categories have been added yet!</h3>
      </th>
    }
  </tr>
    @foreach(Category category in Model)
    {
      <tr>
        <td>
            @Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })
        </td>
      </tr>
    }
</table>
<td>
    @Html.ActionLink("Add a category", "Create")
</td>
<h5>@Html.ActionLink("Main Menu", "Index", "Home")</h5>